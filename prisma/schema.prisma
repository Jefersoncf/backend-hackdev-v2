// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int       @id @default(autoincrement())
  name     String
  category String
  size     ShoeSize?
  price    Int
  percent  Int
  discount Boolean
  details  String
}

enum ShoeSize {
  BR_31
  BR_40
  BR_41
  BR_43
}

enum ClothingSize {
  PP
  P
  M
  G
  GG
  XG
}
